@model FeaturedIndexViewModel

<div class="viewsContainer">
    <h2>Featured broadcasts</h2>

    @foreach (var broadcast in Model.SortedBroadcasts)
    {
        <div class="broadcast">
            <div class="userProfileBox">
                <img class="profileImageMedium" src="~/images/profilePictures/@broadcast.User.ProfileImageFilename" onclick="enlargeImage(this)" alt="Profile Image">
                <span class="userName">@broadcast.User.Name</span>
            </div>

            <p class="postContent">@broadcast.Message</p>

            @if (!string.IsNullOrEmpty(broadcast.ImageFilename))
            {
                <img class="broadcastImageFrame" src="~/images/broadcastImages/@broadcast.ImageFilename" alt="Broadcast Image">
            }

            @* Uppgift 5 - Gilla markeringar (Count) *@
            <p>@broadcast.UserThatLikeBroadcasts.Count Likes</p>
        </div>
    }
</div>
